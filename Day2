        int number1,number2;
        int sum, multiply, subtract, divide, remainder;
        System.out.print("Input First Number:");
        number1=s.nextInt();
        System.out.print("Input Second  Number:");
        number2=s.nextInt();
        sum=number1+number2;
        multiply=number1*number2;
        subtract=number1-number2;
        divide=number1/number2;
        remainder=number1%number2;
        System.out.println(number1 +" + " +number2+"="+sum);
        System.out.println(number1 +" - " +number2+"="+subtract);
        System.out.println(number1 +" x " +number2+"="+multiply);
        System.out.println(number1 +" / " +number2+"="+divide);
        System.out.println(number1 +" mod " +number2+"="+remainder);

        //2
        String str;
        System.out.println("Input a String:");
        str=s.nextLine();
        System.out.print(str.toLowerCase());


